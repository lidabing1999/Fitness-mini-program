/* miniprogram/pages/personalCenter/myinfor/myinfor.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #e9edf1;
  overflow: hidden;
}

.inforContainer {
  width: 95%;
  margin: 20rpx auto 0 auto;
  background-color: #fff;
  border-radius: 18rpx;
}

.inforListContainer {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f8f8f8;
}

.inforContainer>view:last-child {
  border-bottom: 0;
}

.inforListText {
  font-size: 30rpx;
  font-weight: bold;
  color: #606060;
  margin-left: 30rpx;
}

.inforListName {
  font-size: 30rpx;
  color: #747474;
  margin-right: 30rpx;
}

.inforListNameContainer {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.moreIconImg {
  width: 21rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
