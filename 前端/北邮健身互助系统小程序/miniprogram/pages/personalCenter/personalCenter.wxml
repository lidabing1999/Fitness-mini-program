<!--miniprogram/pages/personalCenter/personalCenter.wxml-->
<view class='headerContainer'>
  <view class='headerImgContainer'>
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class='nameContainer'>{{realName}}</view>
</view>
<view class='mainContentContainer'>
  <!--账户信息  -->
  <view class='mainContainer' bindtap='myInforTap'>
    <view class='mainInforContainer'>
      <image src='/images/myInfor.png' class='myInforImg'></image>
      <text class='mainText'>账户信息</text>
    </view>
    <image src='/images/moreIcon.png' class='moreIcon'></image>
  </view>
</view>
